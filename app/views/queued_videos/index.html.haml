%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
      = form_tag queued_videos_update_path do
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queued_videos.each do |queued_video|
              %tr
                %td
                  = hidden_field_tag "queued_videos[][id]", queued_video.id
                  = text_field_tag "queued_videos[][order]", queued_video.order, class: "form-control"
                %td
                  = link_to queued_video.video_title, queued_video.video
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = queued_video.review_rating
                %td
                  = link_to queued_video.video_category_title, queued_video.video.category
                %td
                  = link_to queued_video, method: :delete do
                    %i.glyphicon.glyphicon-remove
        = submit_tag "Update Instant Queue", class: "btn btn-default"
