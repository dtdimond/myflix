%section.my_queue.container
  .row
    .col-sm-10.col-sm-offset-1
      %article
        %header
          %h2 My Queue
        %table.table
          %thead
            %tr
              %th(width="10%") List Order
              %th(width="30%") Video Title
              %th(width="10%") Play
              %th(width="20%") Rating
              %th(width="15%") Genre
              %th(width="15%") Remove
          %tbody
            - @queued_videos.each do |queued_video|
              %tr
                %td
                  %input.form-control(type="text" value="#{queued_video.order}")
                %td
                  = link_to queued_video.video_title, queued_video.video
                %td
                  = button_to "Play", nil, class: "btn btn-default"
                %td
                  = queued_video.review_rating
                %td
                  = link_to queued_video.video_category_title, queued_video.video.category
                %td
                  = link_to queued_video_path(queued_video), method: :delete do
                    %i.glyphicon.glyphicon-remove
        = button_to "Update Instant Queue", nil, class: "btn btn-default"
